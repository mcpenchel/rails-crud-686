<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.label :cuisine %>
  <%= f.text_field :cuisine %>
  <%= f.label :chef_name %>
  <%= f.text_field :chef_name %>
  <%= f.submit %>
<% end %>

<%= link_to "Go back to #{@restaurant.name} details", restaurant_path(@restaurant.id) %>
<%= link_to "Go back to all restaurants", restaurants_path %>
